extends layout

block content
    section.hero
        .hero-image
            img(src="/images/logo.gif" alt="Theater")
        .hero-text
            h1 Herzlich Willkommen bei der
            h2 Schwoagara Dorfbühne
            h2 Kunst und Kultur e.V.
            p Erleben Sie die Magie des Theaters mit der Schwoagara Dorfbühne. Nehmen Sie an kulturellen Veranstaltungen und Aufführungen teil.
            button.btn.btn-primary(onclick="location.href='#anfahrt'") Anfahrt
            button.btn.btn-secondary(onclick="location.href='#contact'") Kontakt

    section.instagram
        // Bestehender Instagram Link-Block (bleibt fast gleich)
        a.instagram-link(href="https://www.instagram.com/dorfbuehne.schwoag/", target="_blank")
            .instagram-container
                .instagram-content
                    img.instagram-profile(src="/images/dorfbuehne_insta.jpg", alt="Instagram Profil")
                    .instagram-text
                        h3 dorfbuehne.schwoag
                        p Folge uns auf Instagram
                img.instagram-icon(src="/images/Instagram_icon.webp", alt="Instagram Icon")

        .instagram-prompt
            p.instagram-follow-text Folg uns doch auf Instagram!
            img.instagram-arrow(src="/images/InstaPfeil.svg")



    // SERVICE-/ANGEBOTS-BEREICH
    section.services#service
        h2 Entdecken Sie unser vielfältiges Angebot
        .services-grid
            a.service(href="/theater")
                img(src="/images/IconBühne.svg" alt="Theater Icon")
                h3 Theater
                p Genießen Sie unsere mitreißenden Stücke, gespielt von unseren erfahrenen Darstellern.
            a.service(href="/jugendtheater")
                img(src="/images/IconKinder.svg" alt="Kindertheater Icon")
                h3 Familientheater
                p Werden Sie Teil faszinierender Vorführungen unserer Nachwuchstalente.
            a.service(href="/starkbierfest")
                img(src="/images/IconSBF.svg" alt="Starkbier Icon")
                h3 Starkbierfest
                p Besuchen Sie unser traditionsreiches Starkbierfest.

    section.team#about
        h2 Unsere Vorstandschaft


        #vorstandschaftLoading(style='text-align: center; padding: 20px;')
            p Vorstandschaft wird geladen...

        #vorstandschaftContainer.team-grid

    section.anfahrt#anfahrt
        h2 Anfahrt
        p Schwoagara Dorfbühne Kunst und Kultur e.V.,
        p Mühlweg 5,
        p 93333 Neustadt an der Donau

        .maps
            #display-google-map
                iframe(
                    frameborder="0",
                    src="https://www.google.com/maps/embed/v1/place?q=Schwoagara+Dorfbühne+Kunst+und+Kultur+e.V.&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
                )


    // KONTAKT-/FOOTER-BEREICH
